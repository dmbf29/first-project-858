<div class="container">
  <h1>Contact</h1>
  <%# Form has action => PATH and method => HTTP_VERB %>
  <%# Filter/Search the le wagon members %>
  <h4>Get Form</h4>
  <form action="/contact" method="get">
    <label for="member">Member</label>
    <%# input needs a type and a name %>
    <%# The name is the key in our params %>
    <input type="text" name="member" value='<%= params[:member] %>'>
    <button type='submit' class="btn btn-primary">Search</button>
  </form>
  <h4>Post Form</h4>
  <form action="/contact" method="post">
    <label for="member">Member</label>
    <%# input needs a type and a name %>
    <%# The name is the key in our params %>
    <input type="text" name="member" value='<%= params[:member] %>'>
    <%= hidden_field_tag :whatever, form_authenticity_token %>
    <button type='submit' class="btn btn-primary">Search</button>
  </form>
  <ul>
    <% @members.each do |member| %>
      <li><%= member.capitalize %></li>
    <% end %>
  </ul>
</div>
